<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <com.github.florent37.materialtextfield.MaterialTextField
            android:id="@+id/materialTextField"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:mtf_labelColor="#666"
            app:mtf_image="@drawable/ic_sentiment_neutral_black_24dp"
            >
            <EditText
                android:id="@+id/etRoomId"
                android:layout_centerInParent="true"
                android:hint="room id"
                android:textColor="#333"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.github.florent37.materialtextfield.MaterialTextField>
        <Button
            android:id="@+id/btnConnectRoom"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/materialTextField"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:text="CONNECT ROOM" />
    </RelativeLayout>
</layout>

